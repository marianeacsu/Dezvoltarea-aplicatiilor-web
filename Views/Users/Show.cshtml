@model ProiectFinal.Models.ApplicationUser

@{
    ViewBag.Title = "Detalii utilizator";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styleLogin.css" media="screen" />
</head>

<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>

<div class="panel-heading titlu">Nume utilizator: @Model.UserName</div>

<div class="panel-body">

    <i class="glyphicon glyphicon-envelope titlu"></i> <span class="titlu" style="margin-left: 5px; margin-right: 8px;">Email utilizator: </span><span class="label label-default">@Model.Email</span>
    <br /><br />
    <i class="glyphicon glyphicon-th-list titlu"></i> <span class="titlu" style="margin-left: 5px; margin-right: 8px;">Rol utilizator: @ViewBag.roleName</span>

    <br /><br />

    @if (@Model.PhoneNumber != null)
    {
        <i class="glyphicon glyphicon-phone titlu"></i>@:<span class="titlu" style="margin-left: 5px; margin-right: 8px;">Telefon utilizator:</span><span class="label label-default">@Model.PhoneNumber</span>

    }

</div>

@if ((string)Model.Id != ViewBag.utilizatorCurent)
{
    <div class="panel-footer">
        @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", routeValues: new { id = @Model.Id }))
        {
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <br />
            <button class="btn btn-success" type="submit">Sterge utilizator</button>

        }
    </div>
}
