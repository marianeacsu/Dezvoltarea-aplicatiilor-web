
@{
    ViewBag.Title = "Adaugare categorie";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/styleAdaugareCateg.css" media="screen" />
</head>

<h2>Adaugare categorie</h2>

<form method="post" action="/Categories/New">

    @Html.Label("CategoryName", "Denumire categorie")
    <br />

    @Html.TextBox("CategoryName", null, new { @class = "form-control" })
    <br /><br />
    <button class="categ" type="submit">Adauga categorie</button>
</form>

